<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- 🔝 標題 + 登出按鈕 -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="― 主選單 ―"
        android:textColor="#333333"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="25dp"
        android:background="@android:color/transparent"
        android:contentDescription="登出"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_power"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 中間可滾動圖片清單 -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="25dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:clipToOutline="true"
                android:background="@drawable/card_background">

                <!-- 背景圖片按鈕 -->
                <ImageButton
                    android:id="@+id/btnLivingRoom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/living_room"
                    android:contentDescription="客廳" />

                <!-- 遮罩 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000" /> <!-- 50% 透明度的白色 -->

                <ImageView
                    android:id="@+id/iconCamera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera"
                    android:contentDescription="攝影機"
                    app:tint="#FFFFFF"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 客廳"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="15dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ⬇️ 底部導覽列 -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/navDocument"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="報告"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_doc" />

        <ImageButton
            android:id="@+id/navDownload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="下載"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_download" />

        <ImageButton
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="歷史紀錄"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_history" />

        <ImageButton
            android:id="@+id/navMore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="設置"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
